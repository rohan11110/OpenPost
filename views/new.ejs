<% layout("/layout/boilerplate") %>
<head>
  <style>
     /* General Reset */
body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #121212; /* Dark background */
    color: #e0e0e0; /* Light text */
    padding: 20px;
}

/* Heading for Create a New Post */
h2 {
    font-size: 2.5rem;
    color: #81c784; /* Soft green accent */
    text-align: center;
    margin-bottom: 20px;
    font-weight: 600;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5); /* Subtle shadow for extra emphasis */
}

/* Subheading for Username */
h3 {
    font-size: 1.4rem;
    color: #b2ff59; /* Lighter green */
    text-align: center;
    margin: 5px 0;
    font-weight: 400;
}

/* Form Container */
form {
    background-color: #1e1e1e; /* Dark background for form */
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.7); /* Stronger shadow */
    max-width: 600px;
    margin: auto;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Hover Effect for Form */
form:hover {
    transform: translateY(-5px);
    box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.8);
}

/* Input Field Styling */
input[name="content"] {
    width: 100%;
    height: 180px;
    background-color: #2c2c2c; /* Darker input background */
    color: #e0e0e0; /* Light text */
    border: 1px solid #4caf50; /* Green border */
    border-radius: 12px;
    padding: 15px;
    font-size: 1rem;
    line-height: 1.5;
    resize: none; /* Prevent resizing */
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

/* Input Focus Effect */
input[name="content"]:focus {
    border-color: #66bb6a; /* Brighter green on focus */
    outline: none; /* Remove default outline */
    box-shadow: 0px 0px 10px rgba(102, 187, 106, 0.5); /* Focus glow effect */
}

/* Submit Button Styling */
button {
    background-color: #4caf50; /* Green background */
    color: #121212; /* Dark text */
    border: none;
    border-radius: 12px;
    padding: 14px 25px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    width: 100%; /* Full width button */
    margin-top: 20px;
    font-weight: 600;
}

/* Button Hover Effect */
button:hover {
    background-color: #388e3c; /* Darker green on hover */
    transform: scale(1.05);
}

/* Button Active Effect */
button:active {
    transform: scale(0.95); /* Click effect */
    background-color: #2e7d32; /* Darker green on active */
}

/* Placeholder Text Styling */
input[name="content"]::placeholder {
    color: #9e9e9e; /* Light grey placeholder */
    font-style: italic;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
    body {
        font-size: 90%; /* Slightly smaller text for mobile */
    }

    form {
        padding: 20px; /* Reduces padding for smaller screens */
    }

    input[name="content"] {
        height: 120px; /* Smaller input field on mobile */
        font-size: 0.95rem;
    }

    button {
        padding: 12px 20px; /* Adjust button padding */
        font-size: 1rem; /* Slightly smaller font size */
    }

    h2 {
        font-size: 2rem; /* Smaller font for heading */
    }

    h3 {
        font-size: 1.2rem; /* Slightly smaller username */
    }
}


  </style>
</head>
<body>
    <h2>Create a New Post</h2>
    
    <form method="post" action="/posts/new">
      <i>Username :</i><h3>@<%= post.username %></h3><br><br>
      <input name="content" placeholder="Write here"><br><br>
      <button>Submit</button>
    </form>
</body>
</html>