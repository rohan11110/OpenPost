<% layout("/layout/boilerplate") %>
<body>
    
    
    
    <% for(post of posts) {%>
    <div>
        <h4>postId : <%= post.id %></h4>
        <h4>Username : <b>@<%= post.username %></b></h4>
        <p><b>content:</b> <%= post.content %></p>
        <div class="like">
            <p>Like : <%= post.like %></p><button id="like"><a href="/posts/<%= post.id%>/increment">Like</a></button>
            <button id="like"><a href="/posts/<%= post.id%>/edit">Edit</a></button>
