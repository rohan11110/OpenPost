<% layout("/layout/boilerplate") %>
<head>
    <style>
       /* General Reset */
body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background-color: #121212; /* Dark background */
    color: #e0e0e0; /* Light text */
    padding: 20px;
}

/* Heading Styling */
h3 {
    font-size: 1.5rem;
    color: #20a81b; /* Green accent */
    margin-bottom: 20px;
}

/* Form Container */
form {
    background-color: #1e1e1e; /* Dark background for the form */
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.6);
    max-width: 600px;
    margin: auto;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Hover Effect for Form */
form:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.8);
}

/* Textarea Styling */
textarea {
    width: 100%;
    height: 150px;
    background-color: #121212; /* Dark textarea */
    color: #e0e0e0; /* Light text in textarea */
    border: 1px solid #4caf50; /* Green border */
    border-radius: 8px;
    padding: 10px;
    resize: none; /* Prevent resizing */
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

/* Textarea Focus Effect */
textarea:focus {
    border-color: #388e3c; /* Darker green on focus */
    outline: none; /* Remove default outline */
}

/* Button Styling */
button {
    background-color: #4caf50; /* Green background */
    color: #121212; /* Dark text */
    border: none;
    border-radius: 8px;
    padding: 12px 20px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    width: 100%;
}

/* Button Hover Effect */
button:hover {
    background-color: #388e3c; /* Darker green on hover */
    transform: scale(1.05);
}

/* Button Active Effect */
button:active {
    transform: scale(0.95); /* Click effect */
    background-color: #2e7d32; /* Even darker green on active */
}

/* Responsive Design */
@media screen and (max-width: 768px) {
    body {
        font-size: 90%; /* Adjust font size for mobile */
    }

    form {
        padding: 15px; /* Less padding for smaller screens */
    }

    textarea {
        height: 120px; /* Smaller textarea on mobile */
    }

    button {
        padding: 10px 15px; /* Adjust button padding for mobile */
        font-size: 0.9rem; /* Slightly smaller font size */
    }
}

    </style>
</head>
<body>
    <h3>Post id : <%= newPost.id %></h3>
    <h3>Username : @<%= newPost.username %></h3>
    <form method="post" action="/posts/<%= newPost.id%>/edit?_method=PATCH">
        <textarea name="content" placeholder="<%= newPost.content %>"></textarea><br>
        <button>Submit</button>
    </form>
</body>
</html>